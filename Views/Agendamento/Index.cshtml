@model IEnumerable<Agendamento>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Celular</th>
            <th scope="col">Data</th>
            <th scope="col">Horário</th>
            <th scope="col">Forma de Pagamento</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var agendamento in Model)
            {
                <tr>
                    <th scope="row">@agendamento.NomeCompleto</th>
                    <td>@agendamento.Celular</td>
                    <td>@agendamento.Data</td>
                    <td>@agendamento.Hora</td>
                    <td>@agendamento.FormaPagamento</td>
                    <td>
                        <a asp-controller="Agendamento" asp-action="Editar" asp-route-id="@agendamento.Id" class="btn btn-warning mx-2">Editar</a>
                        <a asp-controller="Agendamento" asp-action="Excluir" asp-route-id="@agendamento.Id" class="btn btn-danger mx-2">Excluir</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>